\tcbset{demo/.style={
    enhanced, title=title,
    attach boxed title to top
    left = {xshift = .6pt, yshift = -\tcboxedtitleheight -.7pt},
    top = 1pt,
    boxrule = .65pt,
    coltitle = black,
    colback = bgproof,
    colframe = bgproof,
    breakable,
    arc = 0mm,
    outer arc = 0mm,
    boxed title style={
        colback = white,
        colframe = titleproof,
        boxrule = .5pt,
        arc = 0mm,
        outer arc = 0mm
    }
}}


\newlength{\logicv}
\setlength{\logicv}{.1cm}

\newenvironment{proofbox}[2][5]{
  %begin
  \begin{tcolorbox}[demo, title = {#2}]
  \vspace*{#1\logicv}
}{
  %end
  \end{tcolorbox}
}

\newenvironment{subproofbox}[2][5]{
  %begin
  \begin{tcolorbox}[demo, title = {#2}, colframe = subproofm]
  \vspace*{#1\logicv}
}{
  %end
  \end{tcolorbox}
}



